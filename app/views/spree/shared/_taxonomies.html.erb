<div class="container-flex my-4">
  <div class="mb-3">
    <h3 class="text-uppercase"><%= title %></h3>
  </div>
  <div class="card-group justify-content-center">
    <% taxons.each do |taxon| %>
      <div class="container-flex mx-2 my-2">
        <div class="card w-100 h-100" style="min-width: 17rem; min-height: 17rem;">
          <div class="card-body text-success d-flex align-content-end flex-wrap">
            <a href="#" class="btn btn-primary rounded"><%= taxon.name %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
