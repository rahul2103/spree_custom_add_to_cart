<% slides = Spree::Slide.published.location("home") %>
<% if slides.present? %>
  <div class="homepage-hero-image position-relative">
    <%= render partial: 'spree/shared/slider', locals: { slider: slides } %>
  </div>
<% end %>

<% content_for :head do %>
  <%= javascript_include_tag 'spree/custom_add_to_cart', 'data-turbolinks-track': 'reload' %>
<% end %>

<% if @homepage %>
    <% @homepage.cms_sections.each do |section| %>
      <%= build_section(section) %>
    <% end %>
<% else %>
  <div id="missingHomepage" class="container my-5">
    <div class="row my-5">
      <div class="col-12">
        <figure class="logo mx-auto missing-homepage-logo-container">
          <%= logo %>
        </figure>
      </div>
      <div class="col-12 mb-5 text-center">
        <h1 class="mb-3"><%= Spree.t('we_will_be_back') %></h1>
        <h4 class="text-dark"><%= Spree.t('we_are_busy_updating', store_name: current_store.name) %></h4>
        <h4 class="text-dark"><%= Spree.t('please_check_back_soon') %></h4>
      </div>
    </div>
  </div>
<% end %>

<div class="container my-5">
  <%= render 'spree/shared/taxonomies', taxons: Spree::Taxonomy.all.limit(8), title: 'Top Collections' %>
</div>

<%= render "spree/shared/cms/pages/edit_mode", edit_mode: @edit_mode %>
